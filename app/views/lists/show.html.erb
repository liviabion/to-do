<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <h3>Itens</h3>
  <ul class="list-group mb-3">
  <% @list.items.each do |item| %>
    <% next if item.content.blank? %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <%= form_with model: [@list, item], method: :patch, class: 'd-inline' do |f| %>
          <%= f.check_box :completed, { checked: item.completed }, true, false %>
        <% end %>
        <%= item.content %>
      </div>
      <%= button_to 'Remover', [@list, item], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Tem certeza?' } %>
    </li>
  <% end %>
</ul>


  <h3>Adicionar Item</h3>
  <%= form_with url: list_items_path(@list), local: true do |f| %>
    <div class="mb-3">
      <%= f.text_field :content, placeholder: 'Digite uma nova tarefa', class: 'form-control', required: true, name: 'item[content]' %>
    </div>
    <%= f.submit 'Adicionar', class: 'btn btn-success' %>
  <% end %>
  
  

  <div class="mt-4">
    <%= link_to 'Voltar para Listas', lists_path, class: 'btn btn-secondary' %>
  </div>
</div>
