<div class="container mt-5">
  <h1 class="text-center mb-4">Criar Nova Lista</h1>

  <%= form_with model: @list, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name, 'Nome da Lista', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Digite o nome da lista' %>
    </div>
    <%= f.submit 'Criar', class: 'btn btn-primary' %>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Voltar', lists_path, class: 'btn btn-secondary' %>
  </div>
</div>
